{
    "table_definition": {
        "$ref": "${table_definition_dir}/cloud_public/production/accounts.json#/table_definition"
    },
    "source_query": {
        "records": {
            "id": "sa.id",
            "fund_id": "f.fund_id",
            "public_cloud_id": "pc.public_cloud_id",
            "account_status_id": "acts.account_status_id",
            "cash_deposited": "sa.cash_deposited",
            "cash_spend": "sa.cash_spend",
            "cash_balance": "sa.cash_balance",
            "cash_balance_percent": "sa.cash_balance_percent",
            "credit_deposited": "sa.credit_deposited",
            "credit_spend": "sa.credit_spend",
            "credit_balance": "sa.credit_balance",
            "credit_balance_percent": "sa.credit_balance_percent"
        },
        "joins": [
            {
                "name": "staging_accounts",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "sa"
            },
            {
                "name": "public_clouds",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "pc",
                "on": "pc.display = sa.public_cloud"
            },
            {
                "name": "account_statuses",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "acts",
                "on": "acts.name = sa.status"
            },
            {
                "name": "funds",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "f",
                "on": "f.id = sa.fund"
            }
        ]
    }
}
