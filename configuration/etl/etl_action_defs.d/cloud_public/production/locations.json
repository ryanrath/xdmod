{
    "table_definition": {
        "$ref": "${table_definition_dir}/cloud_public/production/locations.json#/table_definition"
    },
    "source_query": {
        "records": {
            "name": "DISTINCT TRIM(location)",
            "full_name": "CONCAT(pc.display, ' - ', location)",
            "cloud_provider_id": "pc.cloud_provider_id"
        },
        "joins": [
            {
                "name": "staging_spend",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "ss"
            },
            {
                "name": "cloud_providers",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "pc",
                "on": "pc.name = TRIM(ss.cloud_provider)"
            }
        ]
    }
}
