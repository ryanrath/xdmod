#!/bin/bash

OS_VERSION=$(cat /etc/os-release | grep "VERSION_ID" | cut -d'=' -f 2 | tr -d '"')

function start_services() {
  /usr/libexec/mariadb-prepare-db-dir
  /usr/bin/mysqld_safe --basedir=/usr &
  /usr/libexec/mariadb-wait-ready $!
  httpd -k start
  /usr/sbin/postfix start

  case "$OS_VERSION" in
  8)
    php-fpm
    ;;
  esac

}

function stop_services() {
  httpd -k stop
  mysqladmin shutdown
  /usr/sbin/postfix stop

  case "$OS_VERSION" in
  8)
    pkill php-fpm
    ;;
  esac
}

case "$1" in
start)
  start_services
  ;;
stop)
  stop_services
  ;;
restart)
  $0 stop
  $0 start
  ;;
nodaemon)
  $0 start
  while sleep 1; do
    mysqladmin status >/dev/null 2>&1
    shouldDie=0
    if [ $? -ne 0 ]; then
      echo "mySQL not running"
      shouldDie=1
    fi
    /usr/sbin/postfix status >/dev/null 2>&1
    if [ $? -ne 0 ]; then
      echo "Postfix not running"
      shouldDie=1
    fi


    # Double check to see if pidof is installed.
    which pidof
    if [ $? -eq 1 ]; then
      pidof httpd >/dev/null 2>&1
      if [ $? -ne 0 ]; then
        echo "httpd not running"
        shouldDie=1
      fi

      if [[ "$OS_VERSION" -eq 8 ]]; then
        pidof php-fpm >/dev/null 2>&1
        if [ $? -ne 0 ]; then
          echo "php-fpm not running"
          shouldDie=1
        fi
      fi
    fi

    if [ $shouldDie -ne 0 ]; then
      exit 1
    fi
  done
  ;;
esac
